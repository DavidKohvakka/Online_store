<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="">

<header >
    <%- include('../partials/header') %>
</header>

<main style="min-height: 600px;" >

    <div class="container-fluid">
  
      <div class="row">
        <div class="col-3    " style="min-height: 600px;">
          <ul class="nav flex-column  m-4 mt-4">
            <li class="nav-item my-1 ">
              <a class="nav-link active" href="/products/all">All</a>
            </li>
            <% if(locals.categories) {
                categories.forEach((item) => { %>
                    <li class="nav-item my-1">
                        <a class="nav-link" href="<%=item.category%>"><%=item.category%></a>
                      </li>
                <%})
            } %>

        </div><!--col-->
        
          
        <!--Products template -->
        <div class="col-8">
          <div class="row">
            
            <% if(locals.products) {
                products.forEach((item) => { %>
                  <div class="col-lg-3 col-md-4 col-sm-6 mt-4">
                    
                    <div class="card h-100" >
                      <a href="/product/<%=item.name%>" class="text-decoration-none">
                        <img class="card-img-top" src="../static/images/pexels-eminumana-2871490.jpg" alt="Card image cap">
                      </a>

                        <div class="card-body">
                          <h5 class="card-title "><%= item.name%></h5>
                          <p class="card-text"><%= item.information%></p>
                        </div>
                      
                      <ul class="list-group list-group-flush">
                        <li class="d-inline list-group-item text-danger product-price">
                         <p class="d-inline"><%= item.price.substring(0,item.price.length -2) %></p><p class="d-inline price-des"><%=item.price.substring(item.price.length -2, item.price.length) %></p>
                          
                        </li>
                        
            
                      </ul>
                      <div class="m-2 p-1">
                        <a href="#" class="card-link">Add</a>
                        
                      </div>
                    </div>
                  </div>
                <%})
            } %>

          </div> <!--row-->
          <nav aria-label="..." class="my-4 d-flex justify-content-center">
                <ul class="pagination">
                  <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item active">
                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                  </li>
                </ul>
          </nav>
  
  
        </div><!--col-->
  
      </div><!--row-->
    </div><!--container-->
  
</main>


<footer class=" border-top p-2 bg-light" style="height: 200px">
    <%- include('../partials/footer')%> 
</footer>
    
    <%- include('../partials/scripts')%>
</body>
</html>