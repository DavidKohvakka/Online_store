<html lang="en">
<head>
    <%- include('../partials/head') %>
    
</head>
<body class="">   
    
<header >
    
</header>

<main style="height: 600px;" >

    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-5 col-md-8 col-sm-10 " style="max-width:400px">
                <div class="border border-primary m-5  rounded ">

                    <form action="/login" method=POST class="mb-0 ">
                        <div class="p-4">
                            <div class="form-group mt-1">
                                <label for="username">Email address</label>
                                <input type="email" class="form-control" id="username" name="username" aria-describedby="emailHelp" placeholder="Enter email" required>  
                            </div>
                            <div class="form-group my-4">
                              <label for="password">Password</label>
                              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                            </div>
                            <div>
                                <% if(locals.message) { %>
                                    <p class="text-info text-center mt-4"><%= message%></p>
                                <%}%>
                            </div>
                            
                            <p class="text-secondary mb-1 mt-5">Don't have an account yet?</p>
                            <button type="button" class="btn d-block btn-outline-secondary">
                                <a href="/register" class="text-decoration-none text-secondary">
                                    Register
                                </a>
                            </button>
                        </div>
                        <div class="bg-light d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary m-5 px-5">Login</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>


</main>

<footer class="fixed-bottom border-top p-2 bg-light" style="height: 200px">
    <%- include('../partials/footer')%> 
</footer>

<%- include('../partials/scripts') %>

    
</body>
</html>

